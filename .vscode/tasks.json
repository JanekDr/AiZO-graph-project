{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",  // WAŻNE: zgadza się z launch.json → "preLaunchTask": "build"
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-std=c++17",
                "-g",
                "sources/main.cpp",
                "sources/Timer.cpp",
                "-o",
                "sources/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
